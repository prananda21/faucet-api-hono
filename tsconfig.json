{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      // Remove or fix these entries if they are not correct or necessary.
      "json-schema",
      "k6"
    ]
  },
  "exclude": ["node_modules", "dist", "dist-test"],
  "include": ["src/**/*", "test/**/*"]
}
